<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.funtl.my.shop.web.admin.dao.TbUserDao">

    <sql id="tbUserColumns">
        a.id,
        a.username,
        a.password,
        a.phone,
        a.email,
        a.created,
        a.updated
    </sql>
    <select id="selectAll" resultType="com.funtl.my.shop.domain.TbUser">
        SELECT
          <include refid="tbUserColumns"/>
        FROM
            tb_user AS a
    </select>
    <insert id="insertTbUser">
        INSERT INTO `myshop`.`tb_user` (
            `username`,
            `password`,
            `phone`,
            `email`,
            `created`,
            `updated`
            )
        VALUES
            (
            #{username},
            #{password},
            #{phone},
            #{email},
            #{created},
            #{updated}
            )
    </insert>

    <delete id="deleteById">
        DELETE
        FROM tb_user
        WHERE id=#{id}
    </delete>

    <select id="getById" resultType="com.funtl.my.shop.domain.TbUser">
         SELECT
          <include refid="tbUserColumns"/>
        FROM
          tb_user AS a
        WHERE a.id=#{id}
    </select>

    <update id="updateTbUser">
        UPDATE
          myshop.tb_user
        SET
          id = #{id},
          username = #{username},
          password = #{password},
          phone = #{phone},
          email = #{email},
          created = #{created},
          updated = #{updated}
        WHERE id = #{id}
    </update>

    <select id="selectByUsername" resultType="com.funtl.my.shop.domain.TbUser">
        SELECT
          <include refid="tbUserColumns"/>
        FROM
          tb_user AS a
        WHERE a.username LIKE CONCAT('%',#{username},'%')
    </select>

    <select id="getByEmail" resultType="TbUser">
        SELECT
          <include refid="tbUserColumns"/>
        FROM
          tb_user AS a
        WHERE a.email=#{email}
    </select>


</mapper>